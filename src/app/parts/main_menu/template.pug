
//.togglewrap(data-responsive-toggle="example-menu", data-hide-for="medium")
    div(data-toggle="example-menu")#toggle
        button(class="menu-icon", type="button") ho
        .title-bar-title Menu

#menu
    ul.main
        li(*ngFor="let item of menu")
            a(routerLink="{{item.path}}") {{item.label}}

            ul(class="child", *ngIf="item.children")
                li(*ngFor="let child of item.children")
                    a(routerLink="{{child.path}}") {{child.label}}
